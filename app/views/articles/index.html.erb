<h1 class="text-center m-4">Articles</h1>

<ul class="p-0 list-unstyled">
  <% @articles.sort_by { |a| a[:created_at] }.reverse.each do |article| %>
    <% unless article.archived? %>
      <li class="p-2 mt-3 rounded-lg">
        <%= link_to article.title, article, class: 'text-decoration-none article-title' %>
        <p class="text-muted">
          <%= article.created_at.strftime("%B %d, %Y")%>
        </p>
        <div class="">
          <%= simple_format(article.body.size > 120 ? article.body[(0..120)] + '...' : article.body) %>
          
          <p class="mb-0 mt-4 text-right">
            <%= link_to 'Read more', article %>
          </p>
        </div>

        <hr class="p-2" />
      </li>
    <% end %>
  <% end %>
</ul>
