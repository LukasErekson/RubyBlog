<br />
<strong class="card-title">
  <%= comment.commenter %>
</strong>
<p class="mt-0 text-muted">
  <%= comment.updated_at.strftime("%B %d, %Y") %>
</p>

<div class="card p-3">
  <p>
    <%= simple_format(comment.body) %>
  </p>
  <p class="text-right mb-0">
    <%= link_to 'Delete', [comment.article, comment],
                method: :delete,
                data: { confirm: "Are you sure?"}
                                                  %>
  </p>
</div>
